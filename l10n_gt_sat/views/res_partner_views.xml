<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="base_view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="state_id" position="before">
                <field name="zona" placeholder="Zona" options="{'no_open': True, 'no_create': True}" style="width:20%;"/>
                <field name="municipio_id" placeholder="Municipio" options="{'no_open': True, 'no_create': True}" style="width:35%;"/>
            </field>
        </field>
    </record>

</odoo>